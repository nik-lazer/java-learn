<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<portlet-app version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<portlet id="firstPortlet">
		<portlet-name>ufos-scroller-portlet</portlet-name>
		<display-name xml:lang="en">First Portlet</display-name>
		<portlet-class>org.zkoss.zk.ui.http.DHtmlLayoutPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>First zkoss portlet</title>
			<short-title>zkoss</short-title>
			<keywords/>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>zk_page</name>
				<value>/list.zul</value>
			</preference>
		</portlet-preferences>
	</portlet>

	<container-runtime-option>
		<name>com.oracle.portlet.useWsrpUserContextForUserAuthenticationInfo</name>
		<value>true</value>
	</container-runtime-option>

</portlet-app>
